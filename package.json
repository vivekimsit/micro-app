{
  "name": "micro-app",
  "version": "1.0.0",
  "description": "App to communicate with authentication microservice",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:dev": "cross-env NODE_ENV=development nodemon index.js",
    "migrate-db": "node ./scripts/migrate",
    "prettier": "prettier --write \"{models,web}/**/*.js\"",
    "lint": "eslint .",
    "test-unit": "cross-env NODE_ENV=test mocha ./test/setup.js ./**/*.unit.spec.js",
    "test-unit-dev": "cross-env NODE_ENV=test mocha --watch ./test/setup.js ./**/*unit.spec.js",
    "test-e2e": "cross-env NODE_ENV=test mocha ./test/setup.js ./**/*.e2e.spec.js",
    "test": "npm run test-unit && npm run test-e2e"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vivekimsit/micro-app.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vivekimsit/micro-app/issues"
  },
  "homepage": "https://github.com/vivekimsit/micro-app#readme",
  "dependencies": {
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "bookshelf": "^0.13.3",
    "chai": "^4.1.2",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "joi": "^13.1.2",
    "jsonwebtoken": "^8.1.1",
    "knex": "^0.14.6",
    "knex-migrator": "^3.1.6",
    "lodash": "^4.17.10",
    "mocha": "^5.1.1",
    "mysql": "^2.15.0",
    "prettier": "^1.12.1",
    "sinon": "^5.0.7",
    "sinon-chai": "^3.0.0",
    "sqlite3": "^4.0.0",
    "super-request": "^1.2.0",
    "winston": "^3.0.0-rc1"
  },
  "devDependencies": {
    "boom": "^7.2.0",
    "cross-env": "^5.1.3",
    "dotenv": "^5.0.0",
    "es6-promisify": "^6.0.0",
    "eslint": "^4.18.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "nodemon": "^1.15.1"
  }
}
