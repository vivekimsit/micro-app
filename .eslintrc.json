{
  "extends": [
    "airbnb-base"
  ],
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "sourceType": "script"
  },
  "rules": {
    "space-before-function-paren": 0,
    "arrow-parens": ["error", "always"],
    "max-len": ["error", 80],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }]
  }
}
